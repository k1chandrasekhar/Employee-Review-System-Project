<header>
    <!-- Header section -->
    <div class="header">
        <!-- Logo -->
        <div>
            <h1>ERS</h1>
        </div>
        <!-- Navigation menu -->
        <div>
            <ul>
                <!-- If user is logged in -->
                <% if(locals.user){%>
                    <!-- Display welcome message with user's name -->
                    <li class="welcome">Welcome <%=user.name%></li>
                    <!-- If user is an admin -->
                    <%if(locals.user.permission=='admin'){%>
                        <!-- Navigation links for admin -->
                        <li><a href="/"><i class='bx bx-home' ></i></a></li>
                        <li><a href="/review/assignWork"><i class='bx bxs-briefcase'></i></a></li>
                        <li><a href="/employee/home"><i class="fa-solid fa-list"></i></a></li>
                        <!-- <i class='bx bx-user'></i></a></li> -->
                        <li><a href="/users/Signup"><i class='bx bx-user-plus'></i></a></li>
                    <%}%>
                    <!-- Logout link -->
                    <li><a href="/users/Signout"><i class='bx bx-exit'></i></a></li>
                <% }else{%>
                    <!-- If user is not logged in -->
                    <!-- Sign in and Sign up links -->
                    <li><a href="/users/Signin">Sign In</a></li>
                    <li><a href="/users/Signup">Sign UP</a></li>
                <%}%>
            </ul>
        </div>
    </div>
</header>
